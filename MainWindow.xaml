<Window x:Class="UchPraktika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchPraktika"
        mc:Ignorable="d"
        Title="ООО &quot;Рога и Копыта&quot;" Height="450" Width="800" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White"/>
                <GradientStop Color="#FF00E3FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="70" ></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Frame x:Name="FramMain" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"/>
        <Button x:Name="LogExBTN" Grid.Column="1" Content="Сменить пользователя" HorizontalAlignment="Left" VerticalAlignment="Center" Click="LogExBTN_Click" Grid.Row="2" Margin="29,0,0,0"/>
        <Button x:Name="GoBackBTN" Grid.Column="1" Content="&lt;--Назад" HorizontalAlignment="Left" Margin="706,5,0,0" Grid.Row="2" Height="20" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="Заявки на ремонт и ослуживание ПК" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>

    </Grid>
</Window>
